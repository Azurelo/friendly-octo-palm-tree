<!-- Loop over each object in the Appointment array -->

  <div class="col col-lg ">
    <h2>Welcome!</h2>
    <h5>Here you can browse for your own special mutt, make an appointment to meet
      your future friend, or upload a mutt in need of a home.</h5>
  </div>

<div class="row justify-content-md-center">


  {{#each pets as |pet| }}



<div class="card card-rounded appointment " style="width: 18rem; padding: 10px">
 <div class=""><img src="/images/{{picture}}.jpg" alt="{{name}}" class="card-img-top petImage"></div>

  <div class="card-body">
    <h5 class="card-title">
          <a href="/pet/{{pet.id}}">{{pet.name}}</a></h5>
    <p class="card-text">{{pet.description}}</p>
  </div>


  <div class="list-group list-group-flush">
    <p class="list-group-item">$500</p>
  </div>
  <div class="card-body">
    <p class="card-text">Info Here</p>
  </div>
</div>
{{/each}}

</div>
